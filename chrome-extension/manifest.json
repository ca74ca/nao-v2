{
  "manifest_version": 3,
  "name": "TRUSTE â€“ Authenticity",
  "version": "0.3.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],             
  "background": { "service_worker": "service_worker.js" },
  "content_scripts": [{
    "matches": ["<all_urls>"],                     
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["badge.css"],
    "matches": ["<all_urls>"]
  }],
  "action": { "default_title": "TRUSTE" }
}
